<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.OneFragment">
   <RelativeLayout
       android:id="@+id/attend_friend_icon_layout"
       android:background="#F3F3F3"
       android:elevation="2dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_below="@+id/event_pic_details"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

      <LinearLayout
          android:orientation="horizontal"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="6.5">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
               <com.alluresoft.friends.CircleImageView
                   android:id="@+id/friend1"
                   android:src="@drawable/blank_avatar"
                   android:layout_width="35dp"
                   android:layout_height="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
               <com.alluresoft.friends.CircleImageView
                   android:id="@+id/friend2"
                   android:src="@drawable/blank_avatar"
                   android:layout_width="35dp"
                   android:layout_height="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
               <com.alluresoft.friends.CircleImageView
                   android:id="@+id/friend3"
                   android:src="@drawable/blank_avatar"
                   android:layout_width="35dp"
                   android:layout_height="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
               <com.alluresoft.friends.CircleImageView
                   android:id="@+id/friend4"
                   android:src="@drawable/blank_avatar"
                   android:layout_width="35dp"
                   android:layout_height="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
               <Button
                   android:id="@+id/friend5"
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:background="@drawable/share_it_circle_btn"
                   android:text="+412"
                   android:textSize="10sp"
                   android:textColor="@color/white"/>
            </LinearLayout>
         </LinearLayout>
         <LinearLayout
             android:gravity="center"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="3.5">
            <Button
                android:id="@+id/attend_btn_discover"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Attend"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/attend_button"/>
         </LinearLayout>
      </LinearLayout>
   </RelativeLayout>
</RelativeLayout>
